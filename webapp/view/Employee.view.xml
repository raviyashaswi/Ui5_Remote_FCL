<mvc:View controllerName="project1.controller.Employee"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns="sap.m">
   <Page id="_IDGenPage1">
   <headerContent>
      <Bar id="_IDGenBar2"  >
         <contentLeft>
            <Button id="_IDGenButton1" 
            icon="sap-icon://nav-back" 
            tooltip="Options" 
            press=".onHeaderButtonPress" />
         </contentLeft>
      </Bar>
        
    </headerContent>
    
      <HBox id="_IDGenHBox2" class="sapUiResponsiveMargin" justifyContent="SpaceBetween" alignItems="Center">
         <HBox id="_IDGenHBox3">
            <Button id="_IDGenButton2"  icon="sap-icon://sort" press=".onPress"/>
         </HBox>
         <SearchField id="_IDGenSearchField1"  placeholder="Search here" search=".onSearch"/>
      </HBox>
    
        <Table id="_IDGenTable"  
            class="sapUiResponsiveMargin" 
            autoPopinMode="true" width="auto" 
            headerText="Employee List" 
            items="{path:'/Employees',
            parameters: {
            $expand: 'allocation,role'
            }
            }"
        >

            <columns>
                <Column id="_IDGenColumn" >
                    <Text id="_IDGenText9"  text="EMPLOYEE_ID" />
                </Column>
                <Column id="_IDGenColumn10" >
                    <Text id="_IDGenText18" text="EMPLOYEE_NAME"/>
                </Column>
                <Column id="_IDGenColumn11" >
                    <Text id="_IDGenText19"  text="EMPLOYEE_ROLE"/>
                </Column>
                <Column id="_IDGenColumn13" >
                    <Text id="_IDGenText23"  text="REMOTE"/>
                </Column>
                

            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem2"  type="Navigation" press="onItemPress" 
                     >
                    <cells>
                        <Text id="_IDGenText20"  text="{ID}" />
                        <Text id="_IDGenText21"  text="{name}"/>
                        <Text id="_IDGenText22"  text="{role/rName}" />
                        <Text id="_IDGenText25"   text="{= ${allocation/ID} === null ? 'Office' : 'Remote' }" />

                    </cells>
                </ColumnListItem>
            </items>
        </Table>

   </Page>
</mvc:View>
<mvc:View controllerName="project1.controller.Remote"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    >
    <Panel id="_IDGenPanel">

        <Table id="Table" class="sapUiResponsiveMargin" autoPopinMode="true" width="auto" headerText="Remote Request List" items="{/Remote}">
            <headerToolbar >
                <OverflowToolbar id="_IDGenOverflowToolbar">
                    <Title id="_IDGenTitle" text="Request List" />
                    <ToolbarSpacer id="_IDGenToolbarSpacer" />
                    <Button id="b" text="Public Holiday List" press=".phbFunction" />
                    <Button id="b1" text="Add new Request" press=".addRequest" />
                </OverflowToolbar>
            </headerToolbar>

            <columns>
                <Column id="_IDGenColumn1">
                    <Text id="_IDGenText" text="EMPLOYEE_ID" />
                </Column>
                <!-- <Column id="_IDGenColumn2">
                    <Text id="_IDGenText1" text="REMOTE"/>
                </Column> -->
                <Column id="_IDGenColumn3">
                    <Text id="_IDGenText11" text="DESTINATION"/>
                </Column>
                <Column id="_IDGenColumn4">
                    <Text id="_IDGenText12" text="FROMDATE"/>
                </Column>
                <Column id="_IDGenColumn5">
                    <Text id="_IDGenText13" text="TODATE"/>
                </Column>
                <Column id="_IDGenColumn6">
                    <Text id="_IDGenText14" text="HOURS"/>
                </Column>
                <Column id="_IDGenColumn7">
                    <Text id="_IDGenText15" text="DAYS"/>
                </Column>
                <Column id="_IDGenColumn8" popinDisplay="Block">
                    <Text id="_IDGenText16" text="STATUS"/>
                </Column>
                <Column id="_IDGenColumn9">
                    <Text id="_IDGenText17" text="REMARKS"/>
                </Column>

            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem" type="Navigation" press=".onItemPress" 
                    highlight="{
                    path: 'status',
                    formatter: '.formatter.statusColor'
                    }" >
                    <cells>
                        <Text id="_IDGenText2" text="{employee_ID}" />
                        <!-- <Text id="_IDGenText3" text="{= ${remote} === '1' ? 'True' : 'False' }"/> -->
                        <Text id="_IDGenText4" text="{= ${destination} === '1' ? 'InCountry' : 'OutCountry' }" />
                        <Text id="_IDGenText5" text="{fromDate}" />
                        <Text id="_IDGenText6" text="{toDate}" />
                        <Text id="_IDGenText7" text="{hours}" />
                        <Text id="_IDGenText8" text="{days}" />
                        <ObjectStatus id="_IDGenObjectStatus1" text="{
                                path: 'status',
                                formatter: '.formatter.statusText'
                            }" state="{
                                path: 'status',
                                formatter: '.formatter.statusColor'
                            }" />
                        <Text id="_IDGenText10" text="{remarks}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</mvc:View>
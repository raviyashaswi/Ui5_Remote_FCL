<mvc:View xmlns:form="sap.ui.layout.form" controllerName="project1.controller.Request" displayBlock="true"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
xmlns:f="sap.ui.layout.form"    >
    <Page id="_IDGenPage">
    <headerContent>
      <Bar id="_IDGenBar1" >
         <contentLeft>
            <Button id="_IDGenButton4" 
            icon="sap-icon://nav-back" 
            tooltip="Options" 
            press=".onHeaderButtonPress" />
         </contentLeft>
      </Bar>
    </headerContent>
   <content>

      <VBox id="_IDGenVBox1" class="sapUiSmallMargin sapUiNoContentPadding">

        <!-- Header summary -->
        <ObjectHeader id="_IDGenObjectHeader"
          title="{employee_ID}"
          number="{status}"
          numberUnit="Status"
          intro="Request Summary"
          />

        <!-- Details form -->
        <f:SimpleForm
          id="requestForm"
          editable="false"
          layout="ResponsiveGridLayout"
          labelSpanM="4"
          emptySpanM="1"
          columnsM="2"
          class="sapUiSmallMarginTop">

          <Label id="_IDGenLabel" text="Request ID" />
          <Text id="_IDGenText1" text="{ID}" />

          <Label id="_IDGenLabel1" text="Employee ID" />
          <Text id="_IDGenText3" text="{employee_ID}" />

          <Label id="_IDGenLabel2" text="From Date" />
          <Text id="_IDGenText24" text="{fromDate}" />

          <Label id="_IDGenLabel3" text="To Date" />
          <Text id="_IDGenText26" text="{toDate}" />

          <Label id="_IDGenLabel4" text="Days" />
          <Text id="_IDGenText27" text="{days}" />

          <Label id="_IDGenLabel5" text="Hours" />
          <Text id="_IDGenText28" text="{hours}" />

          <Label id="_IDGenLabel6" text="Destination" />
          <Text id="_IDGenText29" text="{destination}" />

          <Label id="_IDGenLabel7" text="Remote" />
          <Text id="_IDGenText30" text="{remote}" />

          <Label id="_IDGenLabel8" text="Remarks" />
          <Text id="_IDGenText31" text="{remarks}" />

          <Label id="_IDGenLabel9" text="Created By" />
          <Text id="_IDGenText32" text="{createdBy}" />

          <Label id="_IDGenLabel10" text="Created At" />
          <Text id="_IDGenText33" text="{createdAt}" />

          <Label id="_IDGenLabel11" text="Modified By" />
          <Text id="_IDGenText34" text="{modifiedBy}" />

          <Label id="_IDGenLabel12" text="Modified At" />
          <Text id="_IDGenText35" text="{modifiedAt}" />

        </f:SimpleForm>
      </VBox>
    </content>
    </Page>
</mvc:View>
